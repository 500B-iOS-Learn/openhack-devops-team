pipeline {
    agent any

    environment {
        APP_NAME = 'mydriving-userjava'
        SRC_DIR = 'apis/user-java'
    }

    stages{
        stage('Build Docker Image') {
            steps {
                dir("${env.SRC_DIR}") {
                    script {
                        docker.build("${env.APP_NAME}:${env.BUILD_ID}")
                    }
                }
            }
        }
    }
}